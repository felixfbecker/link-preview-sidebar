{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"noEmit": true,
		"moduleResolution": "node",
		"rootDir": "src",
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"inlineSourceMap": true,
		"inlineSources": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"noUncheckedIndexedAccess": true,
		"paths": {
			"*": ["./src/types/*", "./*"],
		},
	},
	"include": ["src/**/*"],
}
